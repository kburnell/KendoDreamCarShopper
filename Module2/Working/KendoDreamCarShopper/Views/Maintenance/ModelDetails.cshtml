
<h2>Maintenance - Model Details</h2><br/>

<div id="modelDetails" class="inputcontainer">
    <label for="make">Make</label>
    <select id="make" name="make" placeholder="Select Make" data-text-field="Text" data-value-field="Id"
        data-bind="source: makes, value: model.MakeId" required data-required-msg="Must select a Make">
    </select><br />

    <label for="year">Year</label>
    <input id="year" name="Year" type="text" placeholder="Year" data-bind="value: model.Year"
        required validationmessage="Please enter Year" min="1950" max="2025" /><br />

    <label for="model">Model</label>
    <input id="model" name="ModelName" type="text" placeholder="Model Name" data-bind="value: model.Name"
        required validationmessage="Please enter Model Name" maxlength="75" /><br />

    <label for="engineType">Engine</label>
    <input id="engineType" name="engineType" type="text" placeholder="Engine Type" data-bind="value: model.EngineType"
        required validationmessage="Please enter Engine Type" maxlength="75" /><br />

    <label for="breakHorsepower">Break Horsepower</label>
    <input id="breakHorsepower" name="breakHorsepower" type="text" placeholder="Break Horsepower"
        data-bind="value: model.BreakHorsepower" min="300" max="2000" required validationmessage="Please enter Break Horepower" /><br />

    <label for="zeroToSixty">0 - 60 Time (secs)</label>
    <input id="zeroToSixty" type="text" name="zeroToSixty" placeholder="0 - 60 Time (secs)"
        data-bind="value: model.ZeroToSixty" min="1" max="10" required validationmessage="Please enter 0 - 60 Time" /><br />

    <label for="topSpeed">Top Speed (mph)</label>
    <input id="topSpeed" type="text" name="topSpeed" placeholder="Top Speed (mph)" data-bind="value: model.TopSpeed"
        min="100" max="300" required validationmessage="Please enter Top Speed" /><br />

    <label for="basePrice">Base Price</label>
    <input id="basePrice" name="basePrice" type="text" placeholder="Base Price (US $)"
        data-bind="value: model.BasePrice" min="50000" required validationmessage="Please enter Base Price" /><br />

    <label for="description" class="textareaLabel">Description</label>
    <textarea id="description" name="Description" data-bind="value: model.Description"
        placeholder="Description" required validationmessage="Please enter Description"
        maxlength="2000"></textarea><br />

    <div id="images" data-bind="source: images"></div>
    <br />

    <input id="save" type="button" class="k-button" value="Save" data-bind="click: save"/><br />
    <span id="status"></span>
</div>

@section scripts
{
    <script src="~/Scripts/App/Views/Maintenance/modelDetails.js"></script>
}

<script id="commandTemplate" type="text/x-kendo-tmpl">
   <input type="button" class="k-button" data-bind="click: deleteImage" value="Delete">
</script>
